<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Lista de productos -->
    <ListView
        android:id="@+id/lista_compras"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="8dp"/>

    <!-- Totales -->
    <TextView
        android:id="@+id/texto_subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtotal: $0.00"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/texto_ahorro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ahorro: -$0.00"
        android:textSize="16sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/texto_total_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: $0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"/>

    <!-- Botones de acciones -->
    <Button
        android:id="@+id/boton_agregar_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AÃ±adir Producto"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/boton_finalizar_compra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Compra"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/boton_ver_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Historial"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/boton_ver_mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver mapa de tiendas"
        android:layout_marginTop="8dp"/>

</LinearLayout>
