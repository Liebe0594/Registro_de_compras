<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <!-- El mapa de osmdroid ocupa todo el fondo -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Contenedor para los campos de entrada, se superpone en la parte superior -->
    <!-- El fondo semitransparente ayuda a la legibilidad -->
    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#99FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/edit_text_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la tienda"
            android:inputType="textCapWords"
            android:maxLines="1" />

        <EditText
            android:id="@+id/edit_text_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Escribe una direcciÃ³n para buscar"
            android:inputType="textPostalAddress"
            android:maxLines="1" />
    </LinearLayout>

</RelativeLayout>

